{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": ["src", "tests"],
  "exclude": [],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}